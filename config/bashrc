# .bashrc
export HISTCONTROL=erasedups
export LD_LIBRARY_PATH=/usr/local/lib
export LIBRARY_PATH=/usr/local/lib
export CPATH=/usr/local/include

# User specific aliases and functions
export GREP_COMMAND='grep -Ins --color --exclude=*.tags --exclude-dir={.git,.svn}'

function grep_() { 
    ${GREP_COMMAND} "$@" 
}
function grep_recurse_here_() { 
    ${GREP_COMMAND} -ER "${1}" * 
}
function grep_by_filename_() { 
    ${GREP_COMMAND} -E "${1}" $(find -L . -name "${2}") 
}

alias ll='ls -l --color'
alias pd='pushd'
alias p='popd'
alias v='gvim'
alias g='grep_'
alias gr='grep_recurse_here_'
alias gf='grep_by_filename_'
alias pb="curl -F 'sprunge=<-' http://sprunge.us"

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# VIM power
set -o vi 
export EDITOR=vim
