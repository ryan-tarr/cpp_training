set from      = "mcdougall.ryan@gmail.com"
set realname  = "Ryan McDougall"

set imap_user = "mcdougall.ryan@gmail.com"
set imap_pass = "secret"
set imap_keepalive = 900

set smtp_url  = "smtp://mcdougall.ryan@smtp.gmail.com:587/"
set smtp_pass = "secret"

set folder    = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record    = "+[Gmail]/Sent Mail"
#set trash     = "+[Gmail]/Trash"

set header_cache      = ~/.mutt/cache/headers
set message_cachedir  = ~/.mutt/cache/bodies
set tmpdir            = ~/.mutt/cache/temp
set certificate_file  = ~/.mutt/certificates
set mailcap_path      = ~/.mutt/mailcap

ignore *                                    # ignore all headers
unignore date: from: to: cc: subject:       # show only these
set beep_new = yes                          # bell on new mails
set move = no                               # don't move read mail
set copy = no                               # don't copy on send
set mark_old = no                           # just use read/unread
set fast_reply = yes                        # skip to compose
set edit_headers = yes                      # edit headers in compose
set sort = threads                          # enable threaded display
set sort_aux = reverse-last-date-received   # threading sort order
set editor = 'vim + -c "set textwidth=72" -c "set wrap"'  # set width and wrap

bind editor <space> noop
bind index x tag-thread
bind pager x tag-message
bind generic x tag-entry

bind index <space> collapse-thread
bind index gg first-entry
bind index G last-entry
bind index F imap-fetch-mail

bind index,pager \# delete-thread
bind index,pager R group-reply
bind index,pager N search-opposite
bind index,pager \* flag-message            # Gmail Star
bind index \Cr toggle-new                   # Mark un/read
macro index,pager \Cs <save-message>=[Gmail]/Spam<enter><enter> "Report spam"

macro index gi "<change-folder>=INBOX<enter>" "Go to Inbox"
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to All Mail"
macro index gs "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to Sent Mail"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to Drafts"
macro index gt "<change-folder>=[Gmail]/Trash<enter>" "Go to Trash"

bind pager gg top
bind pager G bottom
bind pager j next-line
bind pager k previous-line
bind pager \Cj next-entry
bind pager \Ck previous-entry
bind pager \Cu half-up
bind pager \Cd half-down
