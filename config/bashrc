# .bashrc
export HISTCONTROL=erasedups
export LD_LIBRARY_PATH=/usr/local/lib
export LIBRARY_PATH=/usr/local/lib
export CPATH=/usr/local/includ

# User specific aliases and functions
export GREP_COMMAND='grep -Ins --color --exclude=*.tags --exclude-dir={.git,.svn}'

alias ll='ls -l --color'
alias pd='pushd'
alias p='popd'
alias v='gvim.bat'
alias g='${GREP_COMMAND} $@'
alias gr='${GREP_COMMAND} -ER ${1} *'
alias gf='${GREP_COMMAND} -FR ${1} *'
alias gfn='${GREP_COMMAND} -E "${1}" $(find -L . -name "${2}")'
alias pb="curl -F 'sprunge=<-' http://sprunge.us"

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# VIM power
set -o vi 
export EDITOR=vim
